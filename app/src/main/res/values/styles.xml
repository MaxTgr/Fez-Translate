<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grassLight</item>
        <item name="colorPrimaryDark">@color/grassMedium</item>
        <item name="colorAccent">@color/grassDark</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="OverFlow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:src">@drawable/ic_more_vert</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/stoneDark</item>
    </style>

</resources>
